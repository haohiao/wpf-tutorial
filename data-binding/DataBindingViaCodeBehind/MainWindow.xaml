<Window x:Class="DataBindingViaCodeBehind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingViaCodeBehind"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="200">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="125">
        <TextBox x:Name="ValueTextBox" />
        <WrapPanel Orientation="Horizontal">
            <TextBlock Text="Value: " FontWeight="Bold" />
            <TextBlock x:Name="ValueTextBlock" Text="" />
        </WrapPanel>
    </StackPanel>
</Window>
