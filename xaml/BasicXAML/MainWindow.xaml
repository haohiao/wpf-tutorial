<Window x:Class="BasicXAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicXAML"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button FontWeight="Bold" Content="BUTTON1" />
        <Button>
            <Button.FontWeight>Bold</Button.FontWeight>
            <Button.Content>BUTTON2</Button.Content>
        </Button>
        <Button>
            <Button.FontWeight>Bold</Button.FontWeight>
            <Button.Content>
                <WrapPanel>
                    <TextBlock Foreground="Red">BUTTON</TextBlock>
                    <TextBlock Foreground="Blue">3</TextBlock>
                </WrapPanel>
            </Button.Content>
        </Button>
    </StackPanel>
</Window>
