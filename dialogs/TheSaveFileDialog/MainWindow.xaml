<Window x:Class="TheSaveFileDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheSaveFileDialog"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <DockPanel Margin="10">
        <WrapPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="OpenFileButton" Content="Open File" Margin="5 0" Click="OpenFileButton_Click" />
            <Button x:Name="SaveFileButton" Content="Save File" Margin="5 0" Click="SaveFileButton_Click" />
        </WrapPanel>
        <TextBox Margin="10" x:Name="EditTextBox" AcceptsReturn="True" TextWrapping="Wrap" />
    </DockPanel>
</Window>
