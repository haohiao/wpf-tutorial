<Window x:Class="TheCustomInputDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheCustomInputDialog"
        mc:Ignorable="d"
        Title="MainWindow" Width="300" Height="150">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">
        <TextBlock Text="Hello, world. My name is:" TextAlignment="Center" />
        <TextBlock x:Name="NameTextBlock" Text="[No name entered]" TextAlignment="Center" Margin="0 10" />
        <Button x:Name="EnterNameButton" Content="Enter Name..." Click="EnterNameButton_Click" />
    </StackPanel>
</Window>
